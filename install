#!/bin/sh

if [ ! -f "$HOME/.vim/autoload/plug.vim" ]; then
  curl -fLo $HOME/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
fi

if [ ! -d "$HOME/.tmux/plugins/tpm" ]; then
  git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
fi

ln -i -s $(pwd)/vimrc ~/.vimrc
ln -i -s $(pwd)/gitconfig ~/.gitconfig

mkdir -p ~/.config/nvim
ln -i -s $(pwd)/config/nvim/init.lua ~/.config/nvim/

mkdir -p ~/.config/tmux
ln -i -s $(pwd)/config/tmux/tmux.conf ~/.config/tmux/

mkdir -p ~/.config/hypr
ln -i -s $(pwd)/config/hypr/autostart.conf ~/.config/hypr/
ln -i -s $(pwd)/config/hypr/input.conf ~/.config/hypr/
ln -i -s $(pwd)/config/hypr/monitors.conf ~/.config/hypr/

mkdir -p ~/.config/mc
cp $(pwd)/config/mc/ini ~/.config/mc/
